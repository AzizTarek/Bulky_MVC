@model Category


<form method="post">
	<input asp-for="Id" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit category</h2>
			<hr />
		</div>
		<div asp-validation-summary="ModelOnly"></div> @* Alternative way to show error messages. A list of errors at the top. Possible values: all, model only *@
		<div class="mb-3 ">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span> <!--ASP will run its server side validation and display an appropriate message -->

		</div>
		<div class="mb-3 ">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>

		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-check form-control">Update</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to list</a>
			</div>
		</div>
	</div>
</form>


@section Scripts {
	@* to consume scripts *@
	@{
		<partial name="_ValidationScriptsPartial" />    @* client server validation (done on the spot no reload required)  *@
	}

}